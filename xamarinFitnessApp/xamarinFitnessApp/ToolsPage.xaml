<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamarinFitnessApp.ToolsPage">
    <ContentPage.Content>


        <ScrollView IsVisible="True">

            <StackLayout Padding="20">


                <Button Text="Profile" Clicked="Button_Clicked_profile" StyleClass="Info"/>
                <Button Text="BMI and Daily Calories Calculator" Clicked="Button_Clicked_BMI" StyleClass="Info" />
                <Button Text="Macronutrients Calculator" Clicked="Button_Clicked_macroNutrients" StyleClass="Info"/>
                <Button Text="Unit Conversions" Clicked="Button_Clicked_Conversion" StyleClass="Info"/>
             

            </StackLayout>
        </ScrollView>


    </ContentPage.Content>
</ContentPage>