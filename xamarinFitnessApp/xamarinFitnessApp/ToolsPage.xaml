<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamarinFitnessApp.ToolsPage">
    <ContentPage.Content>


        <ScrollView IsVisible="True">

            <StackLayout Padding="20">


                <Button Text="Profile" Clicked="Button_Clicked_profile" StyleClass="Info"/>
                <Button Text="BMI Calculator" Clicked="Button_Clicked_BMI" StyleClass="Info" />
                <Button Text="Daily Calorie Calculator" Clicked="Button_Clicked_Cals" StyleClass="Info"/>
                <Button Text="Button Default" StyleClass="Info"/>
                <Button Text="Button Class Info" StyleClass="Info" />
                <Button Text="Button Class Info" StyleClass="Info" />
             

            </StackLayout>
        </ScrollView>


    </ContentPage.Content>
</ContentPage>